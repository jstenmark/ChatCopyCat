{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": ["PascalCase"],
        "custom": {
          "regex": "^I[A-Z]",
          "match": true
        }
      }
    ],
    "@typescript-eslint/semi": ["error", "never"],
    "curly": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": "off",
    "no-underscore-dangle": "error"
  },
  "ignorePatterns": ["out", "dist", "**/*.d.ts"],
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended", "prettier", "eslint-config-prettier", "eslint:recommended"]
}
