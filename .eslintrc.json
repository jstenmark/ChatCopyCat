{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "plugins": ["@typescript-eslint", "prettier", "regexp"],
  "rules": {
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": ["PascalCase"],
        "custom": {
          "regex": "^I[A-Z]",
          "match": true
        }
      }
    ],
    "@typescript-eslint/semi": ["error", "never"],
    "curly": "warn",
    "no-underscore-dangle": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true,
        "printWidth": 160,
        "bracketSpacing": true,
        "bracketSameLine": true,
        "arrowParens": "avoid",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf",
        "openingBraceNewLine": false
      },
      {
        "usePrettierrc": false
      }
    ]
  },
  "ignorePatterns": ["out", "dist", "**/*.d.ts", "**/*titled-*","*titled-*"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:regexp/recommended"
  ]
}
