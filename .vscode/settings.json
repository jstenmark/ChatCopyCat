{
  "files.exclude": {
    "node_modules": true,
    "scripts/node_modules": true,
    ".vscode-test": true,
  },
  "search.exclude": {
    "node_modules": true,
    "scripts/node_modules": true,
    "docs": true,
    "out": true,
    ".vscode-test": true,
  },
  "typescript.tsc.autoDetect": "off",
  "eslint.workingDirectories": [
    "src"
  ],
  "json.schemas": [
    {
      "url": "https://cdn.jsdelivr.net/npm/tsup/schema.json",
      "fileMatch": [
        "package.json",
        "tsup.config.json"
      ]
    }
  ]
}