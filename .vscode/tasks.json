{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {"reveal": "never"},
      "group": {"kind": "build", "isDefault": false}
    },
    {
      "type": "npm",
      "script": "compile",
      "group": {"kind": "build", "isDefault": true}
    },
    { "type": "npm", "script": "lint", "problemMatcher": ["$tsc"] }
  ]
}
