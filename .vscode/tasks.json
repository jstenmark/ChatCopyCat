{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$tsc"
      ],
      "label": "eslint: lint"
    },
    {
      "type": "npm",
      "script": "lint:local",
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "label": "eslint: lint whole folder"
    },
    {
      "type": "npm",
      "script": "pkg",
      "problemMatcher": [],
      "label": "vsce pkg",
      "detail": "yarn package && code --install-extension ./chatcopycat-*.vsix && echo 'done' > ~/.vscode/watchdir/done.txt"
    }
  ]
}
