{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Package and Reload Window",
      "type": "shell",
      "command": "yarn pkg",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "cd ${workspaceFolder}; yarn lint",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "focus": true
      },
    }
  ]
}
