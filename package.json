{
  "name": "chatcopycat",
  "displayName": "ChatCopyCat",
  "publisher": "JStenmark",
  "description": "AI assistant development workflow uitlity",
  "author": {
    "name": "Johannes Stenmark"
  },
  "version": "0.0.1",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.83.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jstenmark/ChatCopyCat.git"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "icon": "images/png/logo_128.png",
  "homepage": "https://github.com/jstenmark/ChatCopyCat",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:typescript"
  ],
  "bugs": {
    "url": "https://github.com/jstenmark/ChatCopyCat/issues"
  },
  "pricing": "Free",
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "preview": true,
  "license": "MIT",
  "keywords": [
    "prompt",
    "ai",
    "openai",
    "assistant",
    "chatbot"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ChatCopyCat",
      "properties": {
        "chatcopycat.enableClipboardResetCombo": {
          "type": "boolean",
          "default": true,
          "description": "Reset clipboard macro(double tap copy)"
        },
        "chatcopycat.enableInquiryType": {
          "type": "boolean",
          "default": true,
          "description": "Prompt for the inqiry type"
        },
        "chatcopycat.enableReferenceCopy": {
          "type": "boolean",
          "default": false,
          "description": "Prompt for the inqiry type"
        },
        "chatcopycat.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Include code problem output with code inquiry."
        },
        "chatcopycat.enableCommentRemoval": {
          "type": "boolean",
          "default": true,
          "description": "Remove single and multiline comments (if supported)"
        },
        "chatcopycat.convertSpacesToTabs": {
          "type": "boolean",
          "default": true,
          "description": "Convert spaces to tabs in code blocks"
        },
        "chatcopycat.customInquiryTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Optimize this code",
            "Fix the syntax/type errors",
            "Fix code logic issues",
            "Debug and idenify issues",
            "Improve error handling",
            "Improve code structure",
            "Add unit-tests",
            "Generate docstrings"
          ],
          "description": "Customize inquiry types."
        },
        "chatcopycat.projectTreeIgnoreList": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "out",
            "docs",
            ".vscode",
            ".git",
            "node_modules",
            "__pycache__",
            ".vscode-test",
            "*.log",
            ".github",
            "*.lock",
            "dist"
          ],
          "description": "Ignored URI's in the project tree. (gitignore syntax)"
        },
        "chatcopycat.definitionsAllowList": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Custom file extension support for copy file definitions. eg. ['.ts', '.js']"
        },
        "chatcopycat.definitionsIgnoreList": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "assets",
            "images",
            "*.test.*",
            "test",
            "index.ts",
            "index.js",
            "*.json",
            "*.svg",
            "*.md",
            "*.yml",
            "*.txt"
          ],
          "description": "Ignored URI's for copy file definition. eg. ['*.logs', 'dist']"
        },
        "chatcopycat.customDiagnosticsMessage": {
          "type": "string",
          "default": "",
          "description": "Custom diagonstics message"
        },
        "chatcopycat.customDefaultInquiryMessage": {
          "type": "string",
          "default": "",
          "description": "Set a default inquiry message"
        },
        "chatcopycat.enableForceFocusLastTrackedEditor": {
          "type": "boolean",
          "default": true,
          "description": "Force document focus for the copy command."
        },
        "chatcopycat.logLevelInChannel": {
          "type": "string",
          "default": "DEBUG",
          "enum": [
            "DEBUG",
            "INFO",
            "WARN",
            "ERROR"
          ],
          "description": "Output channel LOGLEVEL"
        },
        "chatcopycat.defaultMessageTruncate": {
          "type": "number",
          "default": 200,
          "description": "Log message max char length. 0 = disabled"
        },
        "chatcopycat.defaultDataTruncate": {
          "type": "number",
          "default": 500,
          "description": "Log data object max char length. 0 = disabled"
        },
        "chatcopycat.enableFolderWatchingForWindowReload": {
          "type": "boolean",
          "default": true,
          "description": "Development - Reload window on pkg build + install detection"
        },
        "chatcopycat.showLanguageInSnippets": {
          "type": "boolean",
          "default": false,
          "description": "Show code language in code blocks"
        },
        "chatcopycat.enableDevelopmentMode": {
          "type": "boolean",
          "default": false,
          "description": "Enabled dev functions"
        }
      }
    },
    "commands": [
      {
        "command": "chatcopycat.copyCode",
        "title": "CCCat: Copy selection or document",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.getFileTree",
        "title": "CCCat: Copy file tree",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.copyDefinitions",
        "title": "CCCat: Copy document defintions",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.copyDefinitionsFromFiles",
        "title": "CCCat: Copy workspace defintions",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.getSymbolReferences",
        "title": "CCCat: Copy symbol references",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.resetClipboard",
        "title": "CCCat: Clear/reset clipboard",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.openMenu",
        "title": "CCCat: Menu",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.openSettings",
        "title": "CCCat: Configuration",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.closeDialog",
        "title": "DevCat: Close dialog",
        "group": "devcat"
      },
      {
        "command": "chatcopycat.reloadWindow",
        "title": "DevCat: Reload Window",
        "group": "devcat"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "chatcopycat.getSymbolReferences",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+shift+c",
        "command": "chatcopycat.copyCode",
        "when": "!terminalFocus && editorTextFocus && chatcopycat:semaphoreDialogOpen == false && !inQuickOpen"
      },
      {
        "key": "ctrl+shift+c",
        "command": "chatcopycat.closeDialog",
        "when": "!terminalFocus && chatcopycat:semaphoreDialogOpen == true"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc --experimentalDecorators -p ./",
    "watch": "tsc --experimentalDecorators --watch",
    "pretest": "yarn compile && yarn lint",
    "lint": "eslint src --ext .ts",
    "lint:local": "NODE_OPTIONS=--max-old-space-size=4096 eslint --cache --cache-location ~/.cache/eslint/ --color --fix src --ext .ts",
    "lint:debug": "NODE_OPTIONS=--max-old-space-size=4096 eslint --color --debug src --ext .ts",
    "lint:config": "NODE_OPTIONS=--max-old-space-size=4096 eslint --color --print-config .eslintrc.json",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --yarn",
    "pkg": "yarn package && code --install-extension ./chatcopycat-*.vsix && echo 'done' > /home/johannes/.vscode/watchdir/done.txt",
    "vsce:package": "vsce package --yarn",
    "vsce:package:pre": "vsce package --yarn --pre-release",
    "vsce:publish": "vsce publish",
    "vsce:publish:pre": "vsce publish --pre-release"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.4.0",
    "@stylistic/eslint-plugin-ts": "^1.4.0",
    "@types/eslint": "^8.0.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "^17.0.0",
    "@types/vscode": "^1.83.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.9.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.6",
    "@vscode/vsce": "^2.21.1",
    "electron": "^27.0.2",
    "eslint": "^8.0.0",
    "glob": "^8.1.0",
    "ignore": "^5.2.4",
    "mocha": "^10.2.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "<=5.2.0"
  }
}
