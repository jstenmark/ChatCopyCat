{
  "name": "chatcopycat",
  "displayName": "ChatCopyCat",
  "publisher": "JStenmark",
  "description": "A VS Code extension to enhance coding workflows with chat assistants",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.83.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jstenmark/ChatCopyCat"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "icon": "images/png/logo.png",
  "homepage": "https://github.com/jstenmark/ChatCopyCat/README.md",
  "activationEvents": [
    "onStartupFinished"
  ],
  "bugs": {
    "url": "https://github.com/jstenmark/ChatCopyCat/issues"
  },
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "license": "MIT",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ChatCopyCat",
      "properties": {
        "chatcopycat.enableClipboardResetCombo": {
          "type": "boolean",
          "default": true,
          "description": "Enable clipoard reset click combo"
        },
        "chatcopycat.inquiryType": {
          "type": "boolean",
          "default": true,
          "description": "Enable prompting of predefined question types"
        },
        "chatcopycat.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable diagnostics."
        },
        "chatcopycat.enableCommentRemoval": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable comment removal."
        },
        "chatcopycat.convertSpacesToTabs": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable conversion of spaces to tabs."
        },
        "chatcopycat.customInquiryTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Optimization",
            "Syntax",
            "Logic",
            "Debugging",
            "Error Handling",
            "Code Structure",
            "Performance",
            "Testing",
            "Security",
            "Documentation"
          ],
          "description": "Array of custom inquiry types."
        },
        "chatcopycat.projectTreeIgnoreList": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/out/**",
            "**/docs/**",
            "**/.vscode/**",
            "**/.git/**",
            "**/node_modules/**",
            "**/__pycache__/**",
            "**/.vscode-test/**"
          ],
          "description": "Array of items to ignore in the project tree."
        },
        "chatcopycat.customDiagnosticsMessage": {
          "type": "string",
          "default": "",
          "description": "Custom message to add to diagnostics."
        },
        "chatcopycat.enableForceFocusLastTrackedEditor": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable forcing focus on the last tracked editor."
        },
        "chatcopycat.logLevelInChannel": {
          "type": "string",
          "default": "DEBUG",
          "enum": ["DEBUG", "INFO", "WARN", "ERROR"],
          "description": "Log level for the output channel"
        },
        "chatcopycat.defaultMessageTruncate": {
          "type": "number",
          "default": 200,
          "description": "Default log message truncate length."
        },
        "chatcopycat.defaultDataTruncate": {
          "type": "number",
          "default": 500,
          "description": "Default log data truncate length."
        },
        "chatcopycat.enableFolderWatchingForWindowReload": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable folder watching for window reload. Used for development"
        },
        "chatcopycat.showLanguageInSnippets": {
          "type": "boolean",
          "default": false,
          "description": "Enable showing language per snippet"
        }
      }
    },
    "commands": [
      {
        "command": "chatcopycat.copyCode",
        "title": "ChatCopyCat: COPY - Snag & Tag",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.getFileTree",
        "title": "ChatCopyCat: FILE-TREE - Raid the File Cabinet",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.copyDefinitions",
        "title": "ChatCopyCat: COPY-DEFINITIONS - Copy functions from file",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.resetClipboard",
        "title": "ChatCopyCat: RESET-CLIPBOARD - Clipboard Makeover",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.openMenu",
        "title": "ChatCopyCat: MENU - Command overview",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.openSettings",
        "title": "ChatCopyCat: SETTINGS - The Command Center",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.closeDialog",
        "title": "ChatCopyCat: CLOSE-INQUIRY - Close em",
        "group": "devcat"
      },
      {
        "command": "chatcopycat.reloadWindow",
        "title": "DevCat: Reload Window",
        "group": "devcat"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+c",
        "command": "chatcopycat.copyCode",
        "when": "!terminalFocus && editorTextFocus && chatcopycat:semaphoreDialogOpen == false && !inQuickOpen"
      },
      {
        "key": "ctrl+shift+c",
        "command": "chatcopycat.closeDialog",
        "when": "!terminalFocus && chatcopycat:semaphoreDialogOpen == true"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc --experimentalDecorators -p ./",
    "watch": "tsc --experimentalDecorators --watch",
    "pretest": "yarn compile && yarn lint",
    "lint": "eslint --fix src --ext ts",
    "lint:debug": "eslint --debug src --ext ts",
    "lint:config": "eslint --print-config .eslintrc.json",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --yarn",
    "pkg": "yarn package && code --install-extension ./chatcopycat-*.vsix && echo 'done' > /home/johannes/.vscode/watchdir/done.txt"
  },
  "devDependencies": {
    "@types/eslint": "^8.0.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "^17.0.0",
    "@types/vscode": "^1.83.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/experimental-utils": "^5.0.0",
    "@typescript-eslint/parser": "^6.9.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.6",
    "@vscode/vsce": "^2.21.1",
    "electron": "^27.0.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^5.0.1",
    "eslint-plugin-local-rules": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-regexp": "^2.1.1",
    "glob": "^8.1.0",
    "ignore": "^5.2.4",
    "mocha": "^10.2.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "<=5.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {}
}
