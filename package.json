{
  "name": "chatcopycat",
  "displayName": "ChatCopyCat",
  "description": "A VS Code extension to enhance coding workflows with chat assistants",
  "version": "0.0.1",
  "publisher": "JStenmark",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.83.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jstenmark/ChatCopyCat"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "homepage": "https://github.com/jstenmark/ChatCopyCat/README.md",
  "activationEvents": [
    "onStartupFinished"
  ],
  "bugs": {
    "url": "https://github.com/jstenmark/ChatCopyCat/issues"
  },
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "license": "MIT",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ChatCopyCat Settings",
      "properties": {
        "chatcopycat.enableClipboardResetHotkey": {
          "type": "boolean",
          "default": true,
          "description": "Enable clipoard reset hotkey"
        },
        "chatcopycat.inquiryType": {
          "type": "boolean",
          "default": true,
          "description": "Enable prompting of predefined question types"
        }
      }
    },
    "commands": [
      {
        "command": "chatcopycat.copy",
        "title": "ChatCopyCat: Snag & Tag",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.projectFiles",
        "title": "ChatCopyCat: Raid the File Cabinet",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.resetClipboard",
        "title": "ChatCopyCat: Clipboard Makeover",
        "group": "chatcopycat"
      },
      {
        "command": "chatcopycat.showClipboardMenu",
        "title": "ChatCopyCat: The Command Central",
        "group": "chatcopycat"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+c",
        "command": "chatcopycat.copy",
        "when": "!terminalFocus && editorTextFocus || !terminalFocus && inQuickOpen"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "chatcopycat.showClipboardMenu"
        }
      ],
      "editor/context": [
        {
          "command": "chatcopycat.showClipboardMenu",
          "group": "chatcopycat"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "watch": "tsc --watch",
    "pretest": "yarn compile && yarn lint",
    "lint": "eslint --fix src --ext ts",
    "lint:debug": "eslint --debug src --ext ts",
    "lint:config": "eslint --print-config .eslintrc.json",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --yarn",
    "pkg": "yarn package && code --install-extension ./chatcopycat-*.vsix && echo 'done' > /home/johannes/.vscode/watchdir/done.txt"
  },
  "devDependencies": {
    "@types/eslint": "^8.0.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "^17.0.0",
    "@types/vscode": "^1.83.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/experimental-utils": "^5.0.0",
    "@typescript-eslint/parser": "^6.9.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.6",
    "@vscode/vsce": "^2.21.1",
    "electron": "^27.0.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^5.0.1",
    "eslint-plugin-local-rules": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-regexp": "^2.1.1",
    "glob": "^8.1.0",
    "ignore": "^5.2.4",
    "mocha": "^10.2.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "<=5.2.0",
    "vm": "^0.1.0",
    "vsce": "^2.15.0"
  }
}
