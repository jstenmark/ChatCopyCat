{
  "name": "chatcopyat",
  "displayName": "ChatCopyCat",
  "description": "A Visual Studio Code extension for copying code to improve chat assistant coding workflows",
  "repository": "https://github.com/jstenmark/ChatCopyCat",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:ChatCopyCat.copy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ChatCopyCat",
      "properties": {
        "ChatCopyCat.enableQuestionType": {
          "type": "boolean",
          "default": true,
          "description": "Enable prompting of predefined question types"
        },
        "ChatCopyCat.enableAdditionalInfo": {
          "type": "boolean",
          "default": true,
          "description": "Enable prompting of predefined additional information"
        }
      }
    },
    "commands": [
      {
        "command": "ChatCopyCat.copy",
        "title": "ChatCopyCat: Copy"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+c",
        "command": "ChatCopyCat.copy",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}