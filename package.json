{
  "name": "chatcopycat",
  "displayName": "ChatCopyCat",
  "description": "A VS Code extension to enhance coding workflows with chat assistants",
  "repository": "https://github.com/jstenmark/ChatCopyCat",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:ChatCopyCat.copy",
    "onCommand:ChatCopyCat.closecopy",
    "onCommand:ChatCopyCat.projectfiles"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ChatCopyCat Settings",
      "properties": {
        "ChatCopyCat.enableQuestionType": {
          "type": "boolean",
          "default": true,
          "description": "Enable prompting of predefined question types"
        },
        "ChatCopyCat.enableAdditionalInfo": {
          "type": "boolean",
          "default": true,
          "description": "Enable prompting of predefined additional information"
        }
      }
    },
    "commands": [
      {
        "command": "ChatCopyCat.copy",
        "title": "ChatCopyCat: Copy with Metadata"
      },
      {
        "command": "ChatCopyCat.closecopy",
        "title": "Close suggestion"
      },
      {
        "command": "ChatCopyCat.projectfiles",
        "title": "ChatCopyCat: Get Project File List"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+c",
        "command": "ChatCopyCat.copy",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+shift+c",
        "command": "ChatCopyCat.closecopy",
        "when": "copyInputBoxOpen"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "commoncompile": "tsc -p src/tsconfig.commonjs.json",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint --fix src --ext ts",
    "lint:debug": "eslint --debug src --ext ts",
    "lint:config": "eslint --print-config .eslintrc.json",
    "test": "node ./out/test/runTest.js",
    "pkg": "vsce package && code --install-extension ./*.vsix"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.6",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.7",
    "@types/vscode": "^1.83.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/experimental-utils": "^5.62.0",
    "@typescript-eslint/parser": "^5.0.1",
    "@vscode/test-electron": "^2.3.5",
    "electron": "^27.0.2",
    "eslint": "^8.7.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-local-rules": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-regexp": "^2.1.1",
    "glob": "^10.3.10",
    "ignore": "^5.2.4",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.4",
    "vm": "^0.1.0",
    "@vscode/vsce": "^2.21.1"
  }
}
